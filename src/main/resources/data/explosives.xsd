<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<xsd:element name="explosivesList">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="explosive" type="explosive" minOccurs="1" maxOccurs="unbounded"/>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	
	<xsd:complexType name="explosive">
		<xsd:attribute name="name" type="xsd:string" use="required"/>
		<xsd:attribute name="damage" type="xsd:string" use="optional"/>
		<xsd:attribute name="cost" type="xsd:float" use="required"/>
		<xsd:attribute name="weight" type="xsd:float" use="required"/>
		<xsd:attribute name="range" type="xsd:int" use="required"/>
		<xsd:attribute name="type" type="xsd:string" use="required"/>
		<xsd:attribute name="availability">
			<xsd:simpleType>
				<xsd:restriction base="xsd:string">
					<xsd:enumeration value="E" />
					<xsd:enumeration value="C" />
					<xsd:enumeration value="R" />
					<xsd:enumeration value="I" />
				</xsd:restriction>
			</xsd:simpleType>
		</xsd:attribute>
	</xsd:complexType>
</xsd:schema>
